rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users koleksiyonu için kurallar
    match /users/{userId} {
      // Kullanıcılar kendi profillerini okuyabilir ve yazabilir
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Kullanıcılar kendi profillerini oluşturabilir (eğer yoksa)
      allow create: if request.auth != null && request.auth.uid != null;
    }

    // Stories koleksiyonu için kurallar
    match /stories/{storyId} {
      // Kullanıcılar kendi hikayelerini okuyabilir ve yazabilir
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;

      // Yeni hikaye oluşturma
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Genel okuma izinleri (gerekirse)
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
